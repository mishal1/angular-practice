<!DOCTYPE HTML>
<html  ng-app="shop">

  <head>
    <link rel="stylesheet" type="text/css" href="stylesheets/bootstrap.css"/>
    <link rel="stylesheet" type="text/css" href="stylesheets/index.css"/>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="js/app.js"></script>
    <title>Shop</title>
  </head>

  <body ng-controller="mainCtrl">

    <header class='headers' id='top-header'>

      <delivery id='delivery'>£10.00 off when you spend over £50.00</delivery>
      <name id='name'>ShopName</name>
      <side id='side-topbar'>
        <signin><a href='#'>Sign In</a> |</signin>
        <register><a href='#'>Register</a> |</register>
        <basket><a href='#'>Basket</a> </basket>
      </side>

    </header>

    <header class='headers' id='bottom-header'>

      <women class='nav-icon' id='women-button' ng-mouseover='showMenu()' ng-mouseleave='hideMenu()'>Women</women>

      <men class='nav-icon'>Men</men>

      <section id='women-menu' class='menu' ng-mouseover='showMenu()' ng-mouseleave='hideMenu()'>
        <arrow class="arrow-up"></arrow>
        <section>
        <a class='menu-item' ng-click='showCasualwear()'>Casualwear</a>
        </section>
        <section>
        <a class='menu-item' ng-click=''>Formalwear</a>
        </section>
        <section>
        <a class='menu-item' ng-click=''>Footwear</a>
        </section>
      </section>

    </header>

    <section id="products" ng-repeat="product in list">
      <article>{{product.category}}</article>
      <article>{{product.colour}}</article>
      <article>{{product.price}}</article>
    </section>

  </body>
</html>